<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Listing ‚Äî FoodLink</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

    <nav class="navbar navbar-dark bg-success">
        <div class="container">
            <a class="navbar-brand" href="/donor/dashboard">‚Üê Back to Dashboard</a>
        </div>
    </nav>

    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <h4 class="page-title">Create Food Listing</h4>

                <div class="bg-white rounded-3 shadow-sm p-4">
                    <form method="POST" action="/listing/create">

                        <div class="mb-3">
                            <label class="form-label">Food Description</label>
                            <input type="text" name="description" class="form-control"
                                placeholder="e.g. Biryani, 50 packets of rice..." required>
                            <div class="form-text">Be specific about the type and condition of food.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Quantity (servings / units)</label>
                            <input type="number" name="quantity" class="form-control" placeholder="e.g. 50" min="1"
                                required>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Expiry / Best Before</label>
                                <input type="datetime-local" name="expiry" class="form-control" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Preferred Pickup Time</label>
                                <input type="datetime-local" name="pickup_time" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Pickup Address</label>
                            <textarea name="pickup_address" class="form-control" rows="2"
                                placeholder="Full address where food can be picked up" required></textarea>
                        </div>

                        <div class="row g-3 mb-2">
                            <div class="col-md-6">
                                <label class="form-label">Latitude</label>
                                <input type="text" id="latitude" name="latitude" class="form-control"
                                    placeholder="e.g. 28.6139" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Longitude</label>
                                <input type="text" id="longitude" name="longitude" class="form-control"
                                    placeholder="e.g. 77.2090" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="getLocation()"
                                id="locBtn">
                                üìç Use My Current Location
                            </button>
                            <span id="locStatus" class="text-muted small ms-2"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100 fw-semibold">Publish Listing</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function getLocation() {
            const btn = document.getElementById('locBtn');
            const status = document.getElementById('locStatus');
            btn.textContent = '‚è≥ Detecting...';
            btn.disabled = true;
            navigator.geolocation.getCurrentPosition(pos => {
                document.getElementById('latitude').value = pos.coords.latitude.toFixed(6);
                document.getElementById('longitude').value = pos.coords.longitude.toFixed(6);
                btn.textContent = '‚úì Location Set';
                status.textContent = `${pos.coords.latitude.toFixed(4)}, ${pos.coords.longitude.toFixed(4)}`;
            }, () => {
                btn.textContent = 'üìç Use My Current Location';
                btn.disabled = false;
                status.textContent = 'Could not get location.';
            });
        }
    </script>
</body>

</html>