<!DOCTYPE html>
<html>
<head>
    <title>My Pickup Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">

<h2>My Pickup Requests</h2>

<a href="/receiver/dashboard" class="btn btn-secondary mb-3">Back to Dashboard</a>
<a href="/logout" class="btn btn-danger float-end">Logout</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Donor</th>
            <th>Food</th>
            <th>Quantity</th>
            <th>Expiry</th>
            <th>Pickup Address</th>
            <th>Pickup Phone</th>
            <th>Pickup Time</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <% requests.forEach(req => { %>
            <tr>
                <td><%= req.donor_name %></td>
                <td><%= req.food_description %></td>
                <td><%= req.quantity %></td>
                <td><%= req.expiry_time %></td>
                <td><%= req.pickup_address %></td>
                <td><%= req.pickup_phone %></td>
                <td><%= req.pickup_time %></td>
                <td>
                    <% if (req.status === "picked") { %>
                        <span class="badge bg-success">Picked</span>
                    <% } else if (req.status === "approved"){ %>
                        <span class="badge bg-warning">Pending</span>
                    <% } else if (req.status === "requested"){ %>
                        <span class="badge bg-warning">Pending</span>
                    <% } %>
                </td>
                <td><a href="/listing/<%= req.id %>">See More</a></td>
            </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>