<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register ‚Äî FoodLink</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>

<body class="bg-light">

    <nav class="navbar navbar-dark bg-success">
        <div class="container">
            <a class="navbar-brand" href="/">üçÉ FoodLink</a>
            <a href="/auth/login" class="btn btn-outline-light btn-sm">Already registered? Login</a>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="bg-white rounded-3 shadow-sm p-4">
                    <h4 class="fw-bold text-success mb-1">Create Account</h4>
                    <p class="text-muted small mb-4">Join FoodLink and start making an impact</p>

                    <form method="POST" action="/auth/sign-up" id="registrationForm">

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Name / Organization</label>
                                <input type="text" name="name" class="form-control" placeholder="e.g. Green Valley NGO"
                                    required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <input type="text" name="phone" class="form-control" placeholder="+91 98765 43210"
                                    required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" name="email" class="form-control" placeholder="you@example.com"
                                required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="password" class="form-control"
                                placeholder="Choose a strong password" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <textarea name="address" class="form-control" rows="2" placeholder="Street, Area..."
                                required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">I am a...</label>
                            <div class="d-flex gap-2">
                                <button type="button" class="role-btn active" id="btn-donor"
                                    onclick="setRole('donor')">üçΩÔ∏è Donor</button>
                                <button type="button" class="role-btn" id="btn-receiver"
                                    onclick="setRole('receiver')">ü§ù Receiver / NGO</button>
                            </div>
                            <input type="hidden" name="role" id="role" value="donor">
                        </div>

                        <hr>

                        <div id="donor-fields" class="role-section mb-3">
                            <p class="text-muted small fw-semibold text-uppercase mb-3">Donor Info</p>
                            <div class="mb-3">
                                <label class="form-label">Donor Type</label>
                                <select name="donor_subtype" class="form-select">
                                    <option value="hotel">Hotel</option>
                                    <option value="restaurant">Restaurant</option>
                                    <option value="event_organizer">Event Organizer</option>
                                    <option value="grocery_store">Grocery Store</option>
                                    <option value="individual">Individual</option>
                                </select>
                            </div>
                            <div class="mb-0">
                                <label class="form-label">FSSAI License ID</label>
                                <input type="text" name="fssai_id" class="form-control"
                                    placeholder="14-digit FSSAI number">
                            </div>
                        </div>

                        <div id="receiver-fields" class="role-section mb-3" style="display:none;">
                            <p class="text-muted small fw-semibold text-uppercase mb-3">Receiver Info</p>
                            <div class="mb-3">
                                <label class="form-label">Receiver Type</label>
                                <select name="receiver_subtype" class="form-select">
                                    <option value="ngo">NGO / Organization</option>
                                    <option value="individual">Individual</option>
                                </select>
                            </div>
                            <div class="mb-0">
                                <label class="form-label">Govt Registration ID</label>
                                <input type="text" name="govt_id" class="form-control"
                                    placeholder="NGO registration number">
                            </div>
                        </div>

                        <hr>

                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label class="form-label">District</label>
                                <input type="text" name="district" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">State</label>
                                <input type="text" name="state" class="form-control" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Pincode</label>
                                <input type="text" name="pincode" class="form-control" required>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 fw-semibold">Create Account</button>
                    </form>

                    <p class="text-center text-muted small mt-3 mb-0">
                        Already have an account? <a href="/auth/login" class="text-success">Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function setRole(role) {
            document.getElementById('role').value = role;
            const donorFields = document.getElementById('donor-fields');
            const receiverFields = document.getElementById('receiver-fields');
            const donorInputs = donorFields.querySelectorAll('input, select');
            const receiverInputs = receiverFields.querySelectorAll('input, select');

            if (role === 'donor') {
                document.getElementById('btn-donor').classList.add('active');
                document.getElementById('btn-receiver').classList.remove('active');
                donorFields.style.display = 'block';
                receiverFields.style.display = 'none';
                donorInputs.forEach(el => el.required = true);
                receiverInputs.forEach(el => el.required = false);
            } else {
                document.getElementById('btn-receiver').classList.add('active');
                document.getElementById('btn-donor').classList.remove('active');
                receiverFields.style.display = 'block';
                donorFields.style.display = 'none';
                receiverInputs.forEach(el => el.required = true);
                donorInputs.forEach(el => el.required = false);
            }
        }
        window.onload = () => setRole('donor');
    </script>
</body>

</html>